    "date-fns": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "next-themes": "^0.4.6",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.6.0",
    "react-toastify": "^11.0.5",
