{
  "name": "monorepo-maestro",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --filter=admin...",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean",
    "dev:web": "turbo dev --filter=web",
    "dev:crm": "turbo dev --filter=crm",
    "dev:admin": "turbo dev --filter=admin"
  },
  "devDependencies": {
    "@repo/eslint-config-custom": "*",
    "dotenv": "^16.4.5",
    "prettier": "^3.2.5",
    "turbo": "^2.0.4",
    "typescript": "^5.4.5"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.1.7"
  }
}
